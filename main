-- MESAJ ALANI
local Box = Instance.new("ScrollingFrame")
Box.Name = "Messages"
Box.Size = UDim2.new(0.92, 0, 0.7, 0)
Box.Position = UDim2.new(0.04, 0, 0.13, 0)
