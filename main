local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local UICorner = Instance.new("UICorner")
local Title = Instance.new("TextLabel")
local SubTitle = Instance.new("TextLabel")
local QuestionFrame = Instance.new("Frame")
local QuestionText = Instance.new("TextLabel")
local AnswerBox = Instance.new("TextBox")
local RedeemBtn = Instance.new("TextButton")
local StatusLabel = Instance.new("TextLabel")

-- Ayarlar & Rastgele Soru (Matematik Sistemi)
local n1, n2 = math.random(20, 99), math.random(10, 50)
local islemler = {"+", "-", "*"}
local secilen_islem = islemler[math.random(1, #islemler)]
local dogru_cevap

if secilen_islem == "+" then dogru_cevap = n1 + n2 
elseif secilen_islem == "-" then dogru_cevap = n1 - n2 
else dogru_cevap = n1 * n2 end

-- UI Yapılandırma
ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "AlchemyMathSystem"

MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15) -- Koyu Arka Plan
MainFrame.Position = UDim2.new(0.5, -165, 0.5, -110)
MainFrame.Size = UDim2.new(0, 330, 0, 220)
MainFrame.Active = true
MainFrame.Draggable = true -- Sürüklenebilir

UICorner.CornerRadius = UDim.new(0, 10)
UICorner.Parent = MainFrame

Title.Parent = MainFrame
Title.Text = "WELCOME TO THE,"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 18
Title.Font = Enum.Font.GothamBold
Title.Position = UDim2.new(0, 15, 0, 15)
Title.Size = UDim2.new(0, 200, 0, 20)
Title.TextXAlignment = Enum.TextXAlignment.Left

SubTitle.Parent = MainFrame
SubTitle.Text = "Alchemy Math"
SubTitle.TextColor3 = Color3.fromRGB(0, 255, 127) -- Neon Yeşil
SubTitle.TextSize = 22
SubTitle.Font = Enum.Font.GothamBold
SubTitle.Position = UDim2.new(0, 15, 0, 35)
SubTitle.Size = UDim2.new(0, 200, 0, 30)
SubTitle.TextXAlignment = Enum.TextXAlignment.Left

-- Soru Alanı
QuestionText.Parent = MainFrame
QuestionText.Text = "Lütfen çözün: " .. n1 .. " " .. secilen_islem .. " " .. n2
QuestionText.TextColor3 = Color3.fromRGB(180, 180, 180)
QuestionText.Position = UDim2.new(0, 0, 0.35, 0)
QuestionText.Size = UDim2.new(1, 0, 0, 20)
QuestionText.Font = Enum.Font.Gotham

-- Giriş Kutusu (Alchemy stili XXXXXX alanı)
AnswerBox.Parent = MainFrame
AnswerBox.PlaceholderText = "Cevabı buraya yazın..."
AnswerBox.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
AnswerBox.Position = UDim2.new(0.05, 0, 0.5, 0)
AnswerBox.Size = UDim2.new(0.9, 0, 0, 40)
AnswerBox.TextColor3 = Color3.new(1, 1, 1)
AnswerBox.Text = ""

local BoxCorner = Instance.new("UICorner")
BoxCorner.CornerRadius = UDim.new(0, 6)
BoxCorner.Parent = AnswerBox

-- Redeem Butonu (Görseldeki yeşil buton)
RedeemBtn.Parent = MainFrame
RedeemBtn.Text = "Redeem (Verify)"
RedeemBtn.BackgroundColor3 = Color3.fromRGB(0, 255, 127)
RedeemBtn.TextColor3 = Color3.fromRGB(10, 10, 10)
RedeemBtn.Font = Enum.Font.GothamBold
RedeemBtn.Position = UDim2.new(0.05, 0, 0.72, 0)
RedeemBtn.Size = UDim2.new(0.9, 0, 0, 45)

local BtnCorner = Instance.new("UICorner")
BtnCorner.CornerRadius = UDim.new(0, 6)
BtnCorner.Parent = RedeemBtn

-- Kontrol Fonksiyonu
RedeemBtn.MouseButton1Click:Connect(function()
    if tonumber(AnswerBox.Text) == dogru_cevap then
        RedeemBtn.Text = "BAŞARILI! YÜKLENİYOR..."
        task.wait(1)
        ScreenGui:Destroy()
        -- Buraya Garden Horizons scriptini veya Hub fonksiyonunu ekle:
        print("Script Aktif Edildi!") 
    else
        RedeemBtn.BackgroundColor3 = Color3.fromRGB(200, 0, 0)
        RedeemBtn.Text = "YANLIŞ CEVAP!"
        task.wait(1.5)
        RedeemBtn.BackgroundColor3 = Color3.fromRGB(0, 255, 127)
        RedeemBtn.Text = "Redeem (Verify)"
    end
end)
